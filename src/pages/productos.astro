---
import Navigation from "../components/ui/Navigation/Navigation.astro";
import Breadcrumb from "../components/ui/Breadcrumb/Breadcrumb.astro";
import Layout from "../layouts/layout.astro";
import PageHeroSection from "../components/HeroSection/PageHeroSection.astro";
import type { BreadcrumbItem } from "../types";

const breadcrumbItems: BreadcrumbItem[] = [
  {
    label: "Productos",
    href: "/productos",
    active: true,
  },
];
---

<Layout
  title="MUGA - Productos"
  description="Descubrí nuestros productos"
>
  <Navigation>
    <Breadcrumb items={breadcrumbItems} />
  </Navigation>
  <div class="hidden lg:block">
    <Breadcrumb items={breadcrumbItems} />
  </div>
  <PageHeroSection 
    title="Nuestros Productos"
    description="Descubrí los productos más recientes"
    textAlign="left"
    showBadge={true}
    badgeText="Catálogo"
  />
  <section class="relative px-6 lg:px-8 py-8">
    <div class="mx-auto max-w-7xl">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <!-- Producto 1: Landing Page -->
        <div class="flex flex-col items-center bg-muga-dark-800/70 border border-white/10 px-6 py-6">
          <img src="/products/edge.webp" alt="Landing Page" class="w-full h-48 object-cover mb-4 border border-white/10" />
          <h2 class="text-xl font-semibold text-white mb-2 tracking-tight">Landing Page</h2>
          <p class="mb-6 text-center text-graylight">Landing page moderna y optimizada para captar clientes y mostrar tu marca.</p>
          <div class="w-full flex justify-center mt-auto">
            <a href="https://mugaland.vercel.app/" target="_blank" rel="noopener" class="inline-flex items-center gap-2 px-4 py-2 text-accent border border-accent hover:bg-accent hover:text-obscure transition font-medium uppercase mb-2">Ver producto <span aria-hidden="true">→</span></a>
          </div>
        </div>
        <!-- Producto 2: Corporativo Astro -->
        <div class="flex flex-col items-center bg-muga-dark-800/70 border border-white/10 px-6 py-6">
          <img src="/products/spark.webp" alt="Corporativo Astro" class="w-full h-48 object-cover mb-4 border border-white/10" />
          <h2 class="text-xl font-semibold text-white mb-2 tracking-tight">Corporativo Astro</h2>
          <p class="mb-6 text-center text-graylight">Sitio corporativo profesional construido con Astro, ideal para empresas y negocios.</p>
          <div class="w-full flex justify-center mt-auto">
            <a href="https://corporativo-astro.vercel.app/" target="_blank" rel="noopener" class="inline-flex items-center gap-2 px-4 py-2 text-accent border border-accent hover:bg-accent hover:text-obscure transition font-medium uppercase mb-2">Ver producto <span aria-hidden="true">→</span></a>
          </div>
        </div>
        <!-- Producto 3: MUGA Electric -->
        <div class="flex flex-col items-center bg-muga-dark-800/70 border border-white/10 px-6 py-6">
          <img src="/favicons/muga-electric-favicon.svg" alt="MUGA Electric" class="w-full h-48 object-contain mb-4 border border-white/10 p-4 bg-muga-dark-800/70" />
          <h2 class="text-xl font-semibold text-white mb-2 tracking-tight">MUGA Electric</h2>
          <p class="mb-6 text-center text-graylight">Proyecto web para MUGA Electric con foco en presentación clara de servicios y presencia profesional.</p>
          <div class="w-full flex justify-center mt-auto">
            <a href="https://muga-electric.vercel.app/" target="_blank" rel="noopener" class="inline-flex items-center gap-2 px-4 py-2 text-accent border border-accent hover:bg-accent hover:text-obscure transition font-medium uppercase mb-2">Ver producto <span aria-hidden="true">→</span></a>
          </div>
        </div>
        <!-- Producto 4: MUGA Maran -->
        <div class="flex flex-col items-center bg-muga-dark-800/70 border border-white/10 px-6 py-6">
          <img src="/favicons/muga-garden-favicon.svg" alt="MUGA Maran" class="w-full h-48 object-contain mb-4 border border-white/10 p-4 bg-muga-dark-800/70" />
          <h2 class="text-xl font-semibold text-white mb-2 tracking-tight">MUGA Maran</h2>
          <p class="mb-6 text-center text-graylight">Proyecto web para MUGA Maran orientado a mostrar marca, propuesta y contacto de forma simple.</p>
          <div class="w-full flex justify-center mt-auto">
            <a href="https://muga-maran.vercel.app/" target="_blank" rel="noopener" class="inline-flex items-center gap-2 px-4 py-2 text-accent border border-accent hover:bg-accent hover:text-obscure transition font-medium uppercase mb-2">Ver producto <span aria-hidden="true">→</span></a>
          </div>
        </div>
        <!-- Producto 5: MUGA Institucional -->
        <div class="flex flex-col items-center bg-muga-dark-800/70 border border-white/10 px-6 py-6">
          <img src="/favicons/muga-institutional.svg" alt="MUGA Institucional" class="w-full h-48 object-contain mb-4 border border-white/10 p-4 bg-muga-dark-800/70" />
          <h2 class="text-xl font-semibold text-white mb-2 tracking-tight">MUGA Institucional</h2>
          <p class="mb-6 text-center text-graylight">Sitio institucional con enfoque en presentación de servicios, confianza de marca y contacto.</p>
          <div class="w-full flex justify-center mt-auto">
            <a href="https://muga-institucional.vercel.app/" target="_blank" rel="noopener" class="inline-flex items-center gap-2 px-4 py-2 text-accent border border-accent hover:bg-accent hover:text-obscure transition font-medium uppercase mb-2">Ver producto <span aria-hidden="true">→</span></a>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
